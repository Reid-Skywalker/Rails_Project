<!DOCTYPE html>
<html>
  <head>
    <title>D&D PlayerHub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
     <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
  </head>

  <body>
  <section class="section">
    <div class="container">
    <header>
    <h1 class='title is-1'><%= link_to 'D&D PlayerHub', root_path %></h1>
    <h2 class='subtitle is-4'>A place to see all your player, character, and campaign data</h2>
    </header>
    <%= render partial: 'players/search_forms'%>
    <%= yield %>
    </div>
    </section>
  </body>
</html>
