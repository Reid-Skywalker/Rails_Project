<div class='column' >
<div class='card'>
<div class= 'card-content'>
<p class='title'>
  <%= @campaign.name %>
</p>
<br/>
<br/>
<p>Characters: <% @campaign.characters.each do |character| %>
  <p><%= link_to (character.first_name + ' ' + character.last_name + ' [ ' + character.character_class + ' ]'), character %></p>
<% end %>
<br/>
<br/>
<p>Monsters: <% @campaign.monsters.each do |monster| %>
  <p><%= link_to monster.name, monster %></p>
<% end %>
</div>
<footer class='card-footer'>
<p class='card-footer-item'>Start Date: <%=@campaign.start_date%></p>
</footer>
</div>
</div>
